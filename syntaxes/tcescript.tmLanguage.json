{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "TCE Script",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#subKeywords"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#strings"
		},
		{
			"name": "meta.selector",
			"match": "txt-[\\w-]+"
		},
		{
			"include": "#entity"
		},
		{
			"name": "keyword.other.unit",
			"match": "\\B(\\+[A-Za-z][A-Za-z_\\d-]+)"
		},
		{
			"name": "string.regexp",
			"match": "\\B(-[A-Za-z][A-Za-z_\\d-]+)"
		},
		{
			"name": "constant.numeric.tcescript",
			"match": "-?[\\d]*\\.\\.-?[\\d]*"
		},
		{
			"name": "constant.numeric.tcescript",
			"match": "\\b[\\d]+\\.?[\\d]*\\b"
		},
		{
			"name": "punctuation.definition.tag",
			"match": "[\\w\\/]+\\.png\\b"
		},
		{
			"name": "comment",
			"match": "#.*$"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"match": "[\\s,:{](actions|actionText|addButterfly|addCharacter|addLocation|addNPC|addStatus|addZone|aggroChance|alwaysSeeking|alwaysShown|alwaysUnlocked|ambientSound|authors|autoRemove|barter|base|baseValue|biomes|bonus|borderBiome|borderImgIdx|buffDays|buffEndEvents|cameraZoom|camShake|canAttack|cance|cancel|chance|characters|charEvents|chat|cloneCharacter|close|color|combat|compassScore|configSettings|consume|count|data|dayEvents|deactivateZones|debugCategory|debugColor|defaultLang|delayedEvent|description|dist|dowsing|dropItems|enabled|endWorld|eventChance|eventImg|events|extends|extraFame|extraSprites|faces|fadeStart|failEvents|fame|file|flags|flee|fleeEvents|for|funds|gameOver|goals|group|hasStash|hasTinted|health|hideParty|hidePartyOffer|hintBiome|hintCompass|id|if|imageData|imgSlot|imgSrc|import|important|incAchievement|initItems|isAbsolute|isAbstract|isLeftFacingSprite|isMountable|isPerk|isRemovable|isWeapon|itemEvents|items|karma|keepReachable|keepReachable|keys|levels|lines|locations|logLevel|loot|losable|loyalty|mail|mapScore|maxChargeTime|maxDice|maxExpedition|maximizeDistance|maxSeekTurns|maxStack|maxTime|metaItem|miniMap|miniSprite|modEntries|modInfo|mountedDice|mountedStatuses|moveCost|moveSounds|moveSpeed|moveSpeed|name|noWeight|npc|npcEvents|offsets|offsetX|offsetY|optional|particle|partyEvents|perlin|playMusic|playSound|playTutorial|posPunch|posTile|preview|prio|ref|refs|removeCharacter|removeItem|removeStatus|removeStatusWithFlags|removeZone|removeZones|replaceLocations|replaceTiles|report|reqAge|reqBiomeFlags|reqCanStartSprawl|reqCharacter|reqCharFlags|reqDice|reqDifficulty|reqFreePartyCount|reqGender|reqHealth|reqItemFlags|reqItems|reqItemsValue|reqKarma|reqLevel|reqLocation|reqLocationFlags|reqLocationFlags|reqLoyalty|reqMaxPerWorld|reqMounted|reqPartyCount|reqPartyFlags|reqPartyStatus|reqRanking|reqSanity|reqStanding|reqStatus|reqStatusDayAge|reqStatusFlags|reqTempFlags|reqTileFlags|reqTiles|reqTutorial|reqWorld|reqWorldFlags|reqZone|resetGlobalInv|resetLocationAge|resetStatusAge|rest|restoreCharacter|return|revealTiles|sanity|scale|select|setCharFlags|setLocationFlags|setLocationFlags|setLocationParticle|setNeighbors|setPartyFlags|setPartyStatus|setPartyStatus|setStatus|setTempFlags|setTile|setTileFlags|showCampFire|showHint|showImage|showInHallOfFame|showOutline|showPartyCount|size|slotMarker|slots|spawnEvents|specialBiomes|sprawls|sprite|sprites|spriteSheets|src|standing|startSprawl|steam|stopTravel|storeCharacter|storeEvents|subLocations|superMove|targetId|teleport|tempDice|terrain|text|tile|tileFlags|time|timeJump|timer|title|tokenIdx|travelEvent|travelParticle|tripEvents|turns|twitter|type|unlockCharacter|unlockPin|unlockPocket|unstoreCharacter|unwarpWorld|useEvents|value|variations|velScale|velX|velY|version|viewCost|wait|warpWorld|weblink|weight|while|win|winEvents|worldMap|zones|reqNoCombat|showNPC|reqTargetChar|reqDiceCharFlags|compactAndStack|canDismiss|tooltip|delay|duration|showReqItems|showPersonInfo)[\\s,:}]",				
				"captures": {
					"1": {"name": "keyword.control.tcescript"}
				}
			}]
		},
		"subKeywords": {
			"patterns": [{
				"match": "[\\s,:{](locationFlags|radius|centerCam|location|capacity|dice|maxRange|range|old|new|power|length|reachable|traversable|width|height|coverage|initEvents|showMounted|worldPower|setPos|particles|particlesChance|priceTable|hideNPCInv|gender|statuses|portrait|seeking|null|showCampfire|npcMovement|oldFlags|previewSprite|closeEvents|cancelEvents|hideNotifications)[\\s,:}]",
				"captures": {
					"1": {"name": "token.debug-token"}
				}
			}]
		},
		"entity": {
			"patterns": [{
				"name": "variable.language.tcescript",
				"match": "\\b(ex|tl|evt|loc|act|gol|grp|pck|bio|it|zn|cl|tg|tgl|il|spr|df|dp|pt|dc|buf|wd|cfg|na|np|ch|sp|anm|npc|pl|emy|st|pk|os|ach|pck)-[\\w-]+"
			}]
		},
		"constant": {
			"patterns": [{
				"match": "[\\s,:{](true|false|agility|stability|mind|any|female|all|male)[\\s,:}]",
				"captures": {
					"1": {"name": "constant.language.tcescript"}
				}
			}]
		},
		"strings": {
			"name": "string.quoted.double.tcescript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tcescript",
					"match": "\\\\."
				}
			]
		}		
	},
	"scopeName": "source.tcescript"
}