{
    "name": "vscode-tce-script",
    "displayName": "TCE script",
    "description": "The Curious Expedition script support",
    "version": "0.0.1",
    "publisher": "Maschinen-Mensch",
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Languages"
    ],
    "dependencies": {
        "hjson": "^2.4.2",
        "@types/node": "^8.0.0"
    },
    "main": "./out/extension",
    "activationEvents": [
		"onLanguage:tcescript",
		"onLanguage:plaintext"
	],
    "contributes": {
        "languages": [{
            "id": "tcescript",  
            "aliases": ["TCE Script", "tcescript"],
            "extensions": [".hjson"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "tcescript",
            "scopeName": "source.tcescript",
            "path": "./syntaxes/tcescript.tmLanguage.json"
        }],
        "documentSymbolProvider" : "true",
        "workspaceSymbolProvider" : "true"
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc extension.ts -watch --outDir out",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.1.9"
   }
}